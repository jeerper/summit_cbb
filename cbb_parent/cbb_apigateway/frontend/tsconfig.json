{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "public/dist",
    "module": "ESNext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src/",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@assets/*": ["./src/assets/*"],
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"],
      "@stores/*": ["./src/stores/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "public/dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "webpack.common.js",
    "webpack.dev.js",
    "webpack.prod.js"
  ]
}
